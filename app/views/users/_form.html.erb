<div class="well">
  <%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit(@user.new_record? ? "Create Account" : "Edit Profile", class: 'btn btn-primary') %>
  <% end %>
</div>