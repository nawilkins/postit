<%= render 'shared/content_title', title: 'All Posts' %>
<% @posts.each do |post| %>
  <div class="row">
    <div class="well">
      <%= render  post.categories %>
      <h4><%= link_to post.title, post.url %></h4>
      <p><%= post.description %>
      <p>
        <span>posted by <%= post.creator.username %></span> on <span class="quiet"><%= post.created_at %>
      </p>
      <small><%= link_to("#{post.comments.size} comments", post_path(post)) %>
    </div>
  </div>
<% end %>