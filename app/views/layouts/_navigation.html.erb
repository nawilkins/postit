<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
  <% if logged_in? %>
    <li><span class="btn btn-primary btn-small"><%= link_to 'New Post', new_post_path %></span></li>
  <% end %>
</ul>
<div class="nav dropdown">
  <% if logged_in? %>
    <%= link_to "#", class: "dropdown-toggle", 'data-toggle' => 'dropdown' do %>
      <span class="btn btn-small btn-success"><%= current_user.username %> <span class="caret"></span></span>
      <ul class="dropdown-menu">
        <li>
        <%=link_to edit_user_path(current_user.id), class: 'inline' do %>
          <span class="icon icon-pencil"></span> Edit Profile
        <% end %>
        </li>
        <li>
          <%= link_to user_path(current_user.id), class: 'inline' do %>
            <span class="icon icon-user"></span> View Profile
          <% end %>
        </li>
        <li><%= link_to logout_path, class: 'inline' do %>
        <span class="icon icon-lock"></span> Logout
        <% end %>
        </li>
      </ul>
    <% end %>
  <% else %>
    <span class="btn btn-small"><%= link_to "Login", login_path %></span>
    <span class="btn btn-small"><%= link_to "Register", register_path %></span>
  <% end %>
</div>
<div class="nav dropdown">
  <%= link_to "#", class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do %>   
  <span class="btn btn-small">Categories <span class="caret"></span>
  <ul class="dropdown-menu">
    <% Category.all.each do |category| %>
      <li><%= link_to category.name, category_path(category) %></li>
    <% end %>
    <% if logged_in? %>
      <li class="divider"></li>
      <li>
        <%= link_to new_category_path, class: "inline" do %>
          <span class="icon icon-plus"></span>New Category
          <% end %>
      </li>
      <% end %>
    </ul>
  <% end %>
</div>
